doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="style.css")
        title weather
    body
        .weatherbox
            label
                input#changelight(type="checkbox")
                .top 
                    svg.temsvg
                        text(x=0 y=100) 26°
                        circle(cx=0 cy=100 r=3)
                        text(x=70 y=80) 27°
                        circle(cx=70 cy=80 r=3)
                        text(x=140 y=60) 28°
                        circle(cx=140 cy=60 r=3)
                        text(x=210 y=70) 27.8°
                        circle(cx=210 cy=70 r=3)
                        text(x=280 y=100) 26.3°
                        circle(cx=280 cy=100 r=3)
                        text(x=350 y=110) 26°
                        circle(cx=350 cy=110 r=3)
                        text(x=420 y=80) 25.8°
                        circle(cx=420 cy=80 r=3)
                        text(x=490 y=90) 30°
                        circle(cx=490 cy=90 r=3)
                        text(x=560 y=560) 27°
                        circle(cx=560 cy=560 r=3)
                        polyline(points="0,100 70,80 140,60 210,70 280,100 350,110 420,80 490,90 560,90 630,100")
                    .textarea 
                        .moon 
                        .cloud
                            .rains
                            .rains.rains1
                            .rains.rains2

                        .temparature 87°F
                        .info
                            .address 新竹市香山區茄苳里
                            .time 星期三 上午4:00
                .bottom
                    .sunrain   
                        .date Sun
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=25)
                    .sunrain   
                        .date Mon
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=25)
                    .sunrain   
                        .date Tue
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=25)
                            circle.cloud(cx=0 cy=30 r=15)
                            circle.cloud(cx=-10 cy=30 r=15)
                            circle.cloud(cx=-20 cy=30 r=15)
                            circle.cloud(cx=-20 cy=15 r=15)
                            circle.cloud(cx=-10 cy=20 r=15)
                            circle.cloud(cx=-30 cy=30 r=15)
                    .sunrain   
                        .date Wed
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=25)
                            circle.cloud(cx=0 cy=30 r=15)
                            circle.cloud(cx=-10 cy=30 r=15)
                            circle.cloud(cx=-20 cy=30 r=15)
                            circle.cloud(cx=-20 cy=15 r=15)
                            circle.cloud(cx=-10 cy=20 r=15)
                            circle.cloud(cx=-30 cy=30 r=15)
                    .sunrain   
                        .date Thu
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=25)
                    .sunrain   
                        .date Fri
                        svg(viewbox="-50 -50 100 100")
                            circle.sun(cx=0 cy=0 r=25)
                    .sunrain   
                        .date Sat
                        svg(viewbox="-60 -25 90 90")
                            circle.cloud(cx=0 cy=30 r=15)
                                animate(attributeName="cy" dur="3s" values="30;35;30" repeatCount="indefinite")
                            circle.cloud(cx=-10 cy=30 r=15)
                                animate(attributeName="cy" dur="3s" values="30;35;30" repeatCount="indefinite")
                            circle.cloud(cx=-20 cy=30 r=15)
                                animate(attributeName="cy" dur="3s" values="30;35;30" repeatCount="indefinite")
                            circle.cloud(cx=-20 cy=15 r=15)
                                animate(attributeName="cy" dur="3s" values="15;20;15" repeatCount="indefinite")
                            circle.cloud(cx=-10 cy=20 r=15)
                                animate(attributeName="cy" dur="3s" values="20;25;20" repeatCount="indefinite")
                            circle.cloud(cx=-30 cy=30 r=15)
                                animate(attributeName="cy" dur="3s" values="30;35;30" repeatCount="indefinite")
                            rect.rains(x=-30 y=30 width=3 height=15)
                            rect.rains(x=-15 y=20 width=3 height=15)
                            rect.rains(x=-5 y=30 width=3 height=15)


